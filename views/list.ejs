<%- include("header") -%>

<div class="box" id="heading">

    <h1> <%= listTitle %> </h1>
</div>

<div class="box">

    <% for (var i =0; i<nextToDos.length; i++) { %>
    <div class="item">
        <input type="checkbox">
        <p> <%= nextToDos[i] %> </p>
    </div>

    <% }  %>
    <form class="item" action="/" method="post">
        <label for="nextToDo">Next To Do</label><br>
        <input type="text" id="nToDo" name="nToDo" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%listTitle%>>+</button>

    </form>

</div>

<%- include("footer") -%>